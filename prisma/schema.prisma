generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI_PRISMA")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email        String    @unique
  name         String
  businessName String?
  password     String
  hasArtistPage Boolean
  pictures     String[]
  description  String?
  bookedDates  DateTime[]
  address      String?
  ratings      Rating[]
  artistPage   ArtistPage?
  bookings     Booking[]
}

model Sessions {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  token   String @unique
  userId       String    @unique @db.ObjectId
}

model ArtistPage {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @unique @db.ObjectId
  artistName   String
  coverPicture String
  description  String
  bookedDates  DateTime[]
  pictures     String[]
  location     Location
  allowedArea  Int
  genre        Genre
  type         Type
  price        Int
  ratings      Rating[]
  user         User      @relation(fields: [userId], references: [id])
  bookings     Booking[]
}

model Booking {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String @db.ObjectId
  artistPageId String @db.ObjectId
  date         DateTime
  artistPage   ArtistPage @relation(fields: [artistPageId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@index([artistPageId, date], name: "booking_index")
}

type Rating {
  value         Int
  comment      String?
  fromUserId    String @db.ObjectId
  bookingId     String @db.ObjectId
}

type Location {
  type  String
  coordinates Float[]
} 

